---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Shreesh Kulkarni â€” Software Engineer',
  description = 'Specializing in the intersection of Supply Chain Tech and AI.',
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Space Grotesk via Fontshare -->
    <link rel="preconnect" href="https://api.fontshare.com" />
    <link
      href="https://api.fontshare.com/v2/css?f[]=space-grotesk@700,600,500,400&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-background text-white font-sans antialiased overflow-x-hidden">
    <slot />
  </body>
</html>
